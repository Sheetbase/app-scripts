{
  "name": "@sheetbase/app-scripts",
  "version": "3.0.0-beta",
  "description": "Scripts for Sheetbase backend modules and apps.",
  "author": "Sheetbase",
  "homepage": "https://sheetbase.dev",
  "license": "MIT",
  "main": "./src/public-api.js",
  "typings": "./src/public-api.d.ts",
  "bin": {
    "sheetbase-app-scripts": "./src/index.js"
  },
  "files": [
    "src",
    "ayedocs-plugin",
    "!**/*.ts",
    "**/*.d.ts"
  ],
  "scripts": {
    "compile": "tsc -p .",
    "lint": "gts check",
    "fix": "gts fix",
    "build": "npm run compile && npm i -g",
    "docs": "ayedocs generate",
    "test": "npm run compile && nyc --cache false mocha test/**/*.js",
    "coverage": "nyc --cache false report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "sheetbase",
    "build-tools",
    "google-apps-script"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sheetbase/app-scripts.git"
  },
  "bugs": {
    "url": "https://github.com/sheetbase/app-scripts/issues"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "commander": "^4.0.1",
    "fs-extra": "^8.1.0",
    "match-all": "^1.2.5",
    "prettier": "^1.19.1",
    "rollup": "^1.27.8",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0"
  },
  "devDependencies": {
    "@lamnhan/testea": "0.0.6",
    "@types/chai": "^4.2.6",
    "@types/fs-extra": "^8.0.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.14",
    "@types/prettier": "^1.19.0",
    "@types/sinon": "^7.5.1",
    "chai": "^4.2.0",
    "coveralls": "^3.0.9",
    "gts": "^1.1.2",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "tslint": "^5.20.1",
    "typescript": "^3.7.3"
  }
}
