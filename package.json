{
  "name": "@sheetbase/app-scripts",
  "version": "1.0.0-rc.0",
  "description": "Scripts for Sheetbase modules and apps.",
  "main": "./src/index.js",
  "bin": {
    "sheetbase-app-scripts": "./src/index.js"
  },
  "files": [
    "config",
    "src",
    "!**/*.ts"
  ],
  "scripts": {
    "transpile": "tsc -p tsconfig.json",
    "build": "npm run transpile && npm i -g --loglevel=error",
    "build-fresh": "npm cache clean --force && npm i && npm run build",
    "docs": "npm i --save-dev parse-comments@0.4.3 && tsc src/usage.ts && node src/usage.js && npm un --save-dev parse-comments",
    "lint": "tslint --project tslint.json && echo 'All files pass linting.'",
    "test": "nyc --cache false mocha --timeout 100000 tests/*.js",
    "coverage": "nyc --cache false report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sheetbase/app-scripts.git"
  },
  "bugs": {
    "url": "https://github.com/sheetbase/app-scripts/issues"
  },
  "keywords": [
    "sheetbase",
    "build-tools",
    "google-apps-script"
  ],
  "importSort": {
    ".ts": {
      "parser": "typescript",
      "style": "module-compact"
    },
    "on-save": false
  },
  "author": "Sheetbase",
  "homepage": "https://sheetbase.net",
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.4.2",
    "change-case": "^3.1.0",
    "commander": "^2.20.0",
    "fs-extra": "^7.0.1",
    "match-all": "^1.2.5",
    "prettier": "^1.16.4",
    "require-from-string": "^2.0.2",
    "rollup": "^1.10.0",
    "ts2gas": "^1.6.2",
    "typedoc": "^0.14.2",
    "uglify-js": "^3.5.4"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/fs-extra": "^5.0.5",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.13.4",
    "@types/prettier": "^1.16.1",
    "@types/require-from-string": "^1.2.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "extract-comments": "^1.1.0",
    "mocha": "^6.1.3",
    "nyc": "^13.3.0",
    "tslint": "^5.15.0",
    "typescript": "^3.4.3",
    "ucfirst": "^1.0.0"
  }
}
