{
  "name": "@sheetbase/app-scripts",
  "version": "0.0.27",
  "description": "Scripts for Sheetbase modules and apps.",
  "main": "./src/index.js",
  "bin": {
    "sheetbase-app-scripts": "./src/index.js"
  },
  "files": [
    "config",
    "src"
  ],
  "scripts": {
    "transpile": "tsc --project tsconfig.json",
    "build": "npm run transpile && npm i -g --loglevel=error",
    "build-fresh": "npm cache clean --force && npm i && npm run build",
    "docs-before": "npm i --save-dev ucfirst extract-comments parse-comments",
    "docs-after": "npm un --save-dev ucfirst extract-comments parse-comments",
    "usage": "tsc src/usage.ts && node src/usage.js",
    "docs": "npm run docs-before && npm run usage && npm run docs-after",
    "lint": "tslint --project tslint.json && echo 'No lint errors.'",
    "test": "nyc --cache false mocha --timeout 100000 -- tests/*.js",
    "coverage": "nyc --cache false report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sheetbase/app-scripts.git"
  },
  "bugs": {
    "url": "https://github.com/sheetbase/app-scripts/issues"
  },
  "keywords": [
    "sheetbase",
    "build-tools",
    "google-apps-script"
  ],
  "importSort": {
    ".ts": {
      "parser": "typescript",
      "style": "module-compact"
    },
    "on-save": false
  },
  "author": "Sheetbase",
  "homepage": "https://sheetbase.net",
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.4.1",
    "change-case": "^3.0.2",
    "commander": "^2.18.0",
    "fs-extra": "^7.0.1",
    "match-all": "^1.2.4",
    "prettier": "^1.14.3",
    "require-from-string": "^2.0.2",
    "rollup": "^0.67.0",
    "showdown": "^1.8.7",
    "ts2gas": "^1.2.0",
    "typedoc": "^0.13.0",
    "uglify-js": "^3.4.9"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/fs-extra": "^5.0.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.1",
    "@types/prettier": "^1.13.2",
    "@types/require-from-string": "^1.2.0",
    "@types/showdown": "^1.7.5",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.1"
  }
}
